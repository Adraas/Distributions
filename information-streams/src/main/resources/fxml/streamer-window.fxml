<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="401.0" prefWidth="745.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.wkn.controller.StreamerWindowController">
    <children>
        <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="745.0">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#clickOnMenuItemClose" text="Выход"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Помощь">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#clickOnMenuItemAbout" text="О программе"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <BarChart fx:id="barChartProbabilities" layoutX="14.0" layoutY="39.0" prefHeight="362.0" prefWidth="453.0">
            <xAxis>
                <CategoryAxis side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </BarChart>
        <ListView fx:id="listViewRandomVariable" layoutX="467.0" layoutY="56.0" prefHeight="174.0" prefWidth="246.0"/>
        <GridPane layoutX="467.0" layoutY="240.0" prefHeight="110.0" prefWidth="246.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="138.0" minWidth="10.0" prefWidth="138.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="138.0" minWidth="10.0" prefWidth="108.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Размер выборки:"/>
                <Label prefHeight="17.0" prefWidth="115.0" text="Значение λ:" GridPane.rowIndex="1"/>
                <Label text="Мин. время ожидания:" GridPane.rowIndex="2"/>
                <TextField fx:id="textFieldSelectionSize" prefHeight="25.0" prefWidth="246.0" GridPane.columnIndex="1"/>
                <TextField fx:id="textFieldLambdaValue" prefHeight="25.0" prefWidth="246.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="1"/>
                <TextField fx:id="textFieldMinWaitingTime" prefHeight="25.0" prefWidth="246.0"
                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <Button layoutX="467.0" layoutY="362.0" mnemonicParsing="false" onAction="#clickOnButtonGenerate"
                prefHeight="25.0" prefWidth="246.0" text="Сгенерировать СВ"/>
        <Label layoutX="467.0" layoutY="39.0" text="Моменты времени наступления событий:"/>
    </children>
</AnchorPane>
