<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="401.0" prefWidth="745.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.wkn.controller.DistributorWindowController">
    <children>
        <BarChart fx:id="barChartDistributions" layoutX="14.0" layoutY="39.0" prefHeight="362.0" prefWidth="453.0">
            <xAxis>
                <CategoryAxis side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </BarChart>
        <GridPane layoutX="467.0" layoutY="167.0" prefHeight="159.0" prefWidth="246.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="textFieldSizeOfSelection" prefHeight="25.0" prefWidth="246.0"
                           promptText="Ввод размера выборки..."/>
                <TextField fx:id="textFieldValueRange" prefHeight="25.0" prefWidth="246.0"
                           promptText="Ввод диапазона значений..." GridPane.rowIndex="1"/>
                <TextField fx:id="textFieldQuantityOfIntervals" prefHeight="25.0" prefWidth="246.0"
                           promptText="Ввод количества интервалов..." GridPane.rowIndex="2"/>
                <TextField fx:id="textFieldSignificanceLevel" prefHeight="25.0" prefWidth="246.0"
                           promptText="Ввод уровня значимости..." GridPane.rowIndex="3"/>
                <TextField fx:id="textFieldThresholdValue" prefHeight="25.0" prefWidth="246.0"
                           promptText="Ввод порогового значения..." GridPane.rowIndex="4"/>
            </children>
        </GridPane>
        <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="745.0">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem fx:id="menuItemClose" mnemonicParsing="false" onAction="#clickOnMenuItemClose"
                                  text="Выход"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Помощь">
                    <items>
                        <MenuItem fx:id="menuItemAbout" mnemonicParsing="false" onAction="#clickOnMenuItemAbout"
                                  text="О программе"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ListView fx:id="listViewRandomVariable" layoutX="467.0" layoutY="39.0" prefHeight="120.0" prefWidth="246.0"/>
        <Button fx:id="buttonGenerate" layoutX="467.0" layoutY="329.0" mnemonicParsing="false"
                onAction="#clickOnButtonGenerate" prefHeight="25.0" prefWidth="246.0" text="Сгенерировать СВ"/>
        <Button fx:id="buttonCheckByQualityControl" disable="true" layoutX="467.0" layoutY="362.0"
                mnemonicParsing="false" onAction="#clickOnButtonCheckByQualityControl" prefHeight="25.0"
                prefWidth="246.0" text="Проверка качества"/>
    </children>
</AnchorPane>
